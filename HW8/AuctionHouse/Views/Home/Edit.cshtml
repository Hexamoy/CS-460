@model AuctionHouse.Models.Item

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.ItemId)
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(x => x.ItemName)
                @Html.EditorFor(x => x.ItemName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Description)
                @Html.EditorFor(x => x.Description, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Seller)
                @Html.DropDownList("Seller", null, htmlAttributes: new { @class = "form-control" })
            </div>
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <button class="btn btn-default" type="submit">Save Changes</button>
        </div>
    </div>
}