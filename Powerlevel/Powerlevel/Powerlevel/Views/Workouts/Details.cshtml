@model Powerlevel.Models.Workout

<!-- Page to display specified Workout details, including the type of workout it is,
    the muscle focus, and about how long it'll take to complete it -->

@{
    ViewBag.Title = "Workout Details";
}

<h2>Workout Details for @Html.DisplayFor(model => model.Name)</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Type)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt>
            Muscle Focus
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MainMuscleFocus)
        </dd>

        <dt>
            Estimated Duration
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TimeEstimate)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to Plans", "Index", "PlanWorkouts")
</p>
