<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PowerLevel</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/DataTables/css/jquery.dataTables.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PowerLevel", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Exercises", "Index", "Exercise")</li>
                    <li>@Html.ActionLink("My Workouts", "Index", "UserCurrWorkouts")</li>
                    <li>@Html.ActionLink("All Plans", "Index", "WorkoutPlanWorkout")</li>
                    <li>@Html.ActionLink("Workout Plans", "Index", "UserWorkoutPlans")</li>

                    @*display their level only once user is logged in, infos are updated using ajax*@
                    @if (User.Identity.IsAuthenticated == true)
                    {
                        @*@<li><a>@Html.Label("LEVEL: 1 | EXP: 1000", new { style = "color:#98afd3" }) </a></li>*@
                        <li><a id="userInfos_navbar"> </a></li>
                    }
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PowerLevel</p>
        </footer>
    </div>



    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/DataTables/jquery.dataTables.js")
    @Scripts.Render("~/Scripts/ToasterScripts.js")
    @Scripts.Render("~/Scripts/userInfos.js")
    @RenderSection("scripts", required: false)
</body>
</html>
