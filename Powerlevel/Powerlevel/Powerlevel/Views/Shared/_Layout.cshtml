<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PowerLevel</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/DataTables/css/jquery.dataTables.css")
    @Styles.Render("~/Content/fullcalendar-4.0.2/packages/core/main.css")
    @Styles.Render("~/Content/fullcalendar-4.0.2/packages/daygrid/main.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @Html.ActionLink("PowerLevel", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Exercises", "Index", "Exercise", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("My Workouts", "Index", "UserCurrWorkouts", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("All Plans", "Index", "WorkoutPlanWorkout", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Workout Plans", "Index", "UserWorkoutPlans", null, new { @class = "nav-link" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PowerLevel</p>
        </footer>
    </div>



    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/DataTables/jquery.dataTables.js")
    @Scripts.Render("~/Scripts/DataTables/dataTables.bootstrap4.js")
    @Scripts.Render("~/Content/fullcalendar-4.0.2/packages/core/main.js")
    @Scripts.Render("~/Content/fullcalendar-4.0.2/packages/daygrid/main.js")
    @Scripts.Render("~/Scripts/ToasterScripts.js")
    @RenderSection("scripts", required: false)
</body>
</html>
