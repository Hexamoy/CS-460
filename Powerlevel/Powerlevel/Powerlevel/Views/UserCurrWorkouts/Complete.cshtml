<!-- Allows the user to Compelete the workout, removing it from the UserCurrWorkout table -->

@model Powerlevel.Models.UserCurrWorkout

@{
    ViewBag.Title = "Complete";
}

<h3>Congratulations for successfully completing this Workout!</h3>
<div>
    <hr />

    <h4>
        <b>@Html.DisplayFor(model => model.User.UserName)</b> will complete the
        <b>@Html.DisplayFor(model => model.WorkoutExercise.Workout.Name)</b> Workout
        
    </h4>
    <h6>Check the box to confirm completion.</h6>
    <br />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <!-- User must "Confirm" completion of the workout by checking the box -->
        @Html.CheckBox("Confirm Complete", new { @required = "required" })
        <input type="submit" value="Complete!" class="btn btn-default" /> |
        @Html.ActionLink("Back to List", "Index")
    </div>
    }
</div>
