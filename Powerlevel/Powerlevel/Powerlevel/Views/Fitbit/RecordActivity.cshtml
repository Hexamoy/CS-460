
@{
    ViewBag.Title = "RecordActivity";
}

<h2>Record Activity</h2>

@using (Html.BeginForm("RecordActivity", "Fitbit", FormMethod.Post))
{
    @Html.AntiForgeryToken();

    @Html.ValidationSummary(false, "", new { @class = "text-danger"});

    <div class="form-group">
        @Html.Label("Calories", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("Calories", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBox("userWorkoutId", null, new { @class = "form-control", @Value = ViewBag.UserWorkoutId, @hidden = "hidden", @readonly = "readonly"})
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Confirm" class="btn btn-success" />
        </div>
    </div>
}